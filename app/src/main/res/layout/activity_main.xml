<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/colorPrimaryDark">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombreAutor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:gravity="center"
            android:hint="Ingrese Nombre" android:layout_marginTop="47dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTituloInicio" android:layout_below="@+id/txtTituloInicio"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="104dp" android:layout_marginEnd="104dp" android:layout_alignParentStart="true"
            android:layout_marginLeft="94dp" android:layout_marginStart="94dp" android:layout_alignParentLeft="true"/>
    <Button
            android:text="Entrar"
            android:layout_width="143dp"
            android:layout_height="39dp"
            android:id="@+id/btnEntrar"
            app:layout_constraintStart_toStartOf="@+id/txtNombreAutor"
            android:layout_marginTop="65dp" app:layout_constraintTop_toBottomOf="@+id/txtNombreAutor"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.109"
            app:layout_constraintEnd_toEndOf="@+id/txtNombreAutor" android:background="@drawable/button"
            android:layout_below="@+id/txtNombreAutor" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="142dp" android:layout_marginEnd="142dp"
            android:layout_alignParentStart="true" android:layout_marginLeft="127dp" android:layout_marginStart="127dp"
            android:layout_alignParentLeft="true"/>
    <TextView
            android:text="Localizador de Libros"
            android:layout_width="239dp"
            android:layout_height="98dp"
            android:id="@+id/txtTituloInicio" android:layout_marginTop="200dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="85dp" android:layout_marginRight="85dp" android:textSize="36sp"
            android:textStyle="bold" app:layout_constraintHorizontal_bias="0.987" android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"/>
</RelativeLayout>