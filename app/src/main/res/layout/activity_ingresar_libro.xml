<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IngresarLibroActivity" android:background="@color/colorPrimaryDark">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombreLibro"
            app:layout_constraintStart_toStartOf="@+id/txtICBN"
            app:layout_constraintEnd_toEndOf="@+id/txtICBN"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtICBN"
            android:hint="Nombre Libro"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtLongitud"
            android:hint="Latitud"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/txtnumEdicion"
            app:layout_constraintEnd_toEndOf="@+id/txtnumEdicion"
            app:layout_constraintStart_toStartOf="@+id/txtnumEdicion" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtLongitud"
            android:hint="Longitud"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtLongitud"
            app:layout_constraintEnd_toEndOf="@+id/txtLongitud" app:layout_constraintStart_toStartOf="@+id/txtLongitud"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtEditorial"
            android:hint="Editorial"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtfechaPublicacion"
            app:layout_constraintEnd_toEndOf="@+id/txtfechaPublicacion"
            app:layout_constraintStart_toStartOf="@+id/txtfechaPublicacion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtnumEdicion" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtEditorial"
            app:layout_constraintStart_toStartOf="@+id/txtEditorial"
            app:layout_constraintEnd_toEndOf="@+id/txtEditorial" android:hint="Edicion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/txtfechaPublicacion"
            android:hint="Fecha Publicacion"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtNumPaginas"
            app:layout_constraintStart_toStartOf="@+id/txtNumPaginas"
            app:layout_constraintEnd_toEndOf="@+id/txtNumPaginas"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtNumPaginas"
            android:hint="Num Paginas" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombreLibro"
            app:layout_constraintStart_toStartOf="@+id/txtNombreLibro"
            app:layout_constraintEnd_toEndOf="@+id/txtNombreLibro"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtICBN" android:layout_marginTop="144dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="ICBN"/>
    <Button
            android:text="Guardar"
            android:layout_width="156dp"
            android:layout_height="50dp"
            android:id="@+id/btnGuardar"
            app:layout_constraintStart_toStartOf="@+id/txtnumEdicion"
            app:layout_constraintEnd_toEndOf="@+id/txtnumEdicion" android:background="@drawable/button"
            app:layout_constraintHorizontal_bias="0.491" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/txtLongitud"/>
    <TextView
            android:layout_width="256dp"
            android:layout_height="74dp"
            android:id="@+id/txtTituloNuevoLibro" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="44dp" android:textAlignment="center"
            android:textSize="32sp" android:textStyle="bold" android:text="LIBRO NUEVO"/>

</androidx.constraintlayout.widget.ConstraintLayout>