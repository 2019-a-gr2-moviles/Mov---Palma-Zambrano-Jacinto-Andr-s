<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IngresarLibroActivity" android:background="@color/colorPrimaryDark">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombreLibroA"
            app:layout_constraintStart_toStartOf="@+id/txtICBNA"
            app:layout_constraintEnd_toEndOf="@+id/txtICBNA"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtICBNA"
            android:hint="Nombre Libro"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtLongitudA"
            android:hint="Latitud"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/txtnumEdicionA"
            app:layout_constraintEnd_toEndOf="@+id/txtnumEdicionA"
            app:layout_constraintStart_toStartOf="@+id/txtnumEdicionA" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtLongitudA"
            android:hint="Longitud"
            tools:layout_editor_absoluteY="543dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtEditorialA"
            android:hint="Editorial"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtfechaPublicacionA"
            app:layout_constraintEnd_toEndOf="@+id/txtfechaPublicacionA"
            app:layout_constraintStart_toStartOf="@+id/txtfechaPublicacionA"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtnumEdicionA" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtEditorialA"
            app:layout_constraintStart_toStartOf="@+id/txtEditorialA"
            app:layout_constraintEnd_toEndOf="@+id/txtEditorialA" android:hint="Edicion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/txtfechaPublicacionA"
            android:hint="Fecha Publicacion"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtNumPaginasA"
            app:layout_constraintStart_toStartOf="@+id/txtNumPaginasA"
            app:layout_constraintEnd_toEndOf="@+id/txtNumPaginasA"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtNumPaginasA"
            android:hint="Num Paginas" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombreLibroA"
            app:layout_constraintStart_toStartOf="@+id/txtNombreLibroA"
            app:layout_constraintEnd_toEndOf="@+id/txtNombreLibroA"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtICBNA" android:layout_marginTop="144dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="ICBN"/>
    <Button
            android:text="Guardar"
            android:layout_width="156dp"
            android:layout_height="50dp"
            android:id="@+id/btnGuardar"
            android:background="@drawable/button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/txtLongitudA"/>
    <TextView
            android:layout_width="256dp"
            android:layout_height="74dp"
            android:id="@+id/txtTituloNuevoLibro" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="44dp" android:textAlignment="center"
            android:textSize="32sp" android:textStyle="bold" android:text="LIBRO NUEVO"/>

</androidx.constraintlayout.widget.ConstraintLayout>