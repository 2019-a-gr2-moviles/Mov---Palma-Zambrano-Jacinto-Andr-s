<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActualizarAutorActivity" android:background="@color/colorPrimaryDark">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtEcuatorianoAct"
            app:layout_constraintStart_toStartOf="@+id/numLibros"
            app:layout_constraintEnd_toEndOf="@+id/numLibros" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/numLibros"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtFechaNacimientoAutor" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtApellidosAutor"
            app:layout_constraintStart_toStartOf="@+id/txtApellidosAutor"
            app:layout_constraintEnd_toEndOf="@+id/txtApellidosAutor"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtApellidosAutor" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombreAutor"
            app:layout_constraintStart_toStartOf="@+id/txtNombreAutor"
            app:layout_constraintEnd_toEndOf="@+id/txtNombreAutor"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombreAutor" android:layout_marginTop="104dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Eliminar"
            android:layout_width="131dp"
            android:layout_height="45dp"
            android:id="@+id/btnEliminar"
            android:layout_marginTop="104dp"
            app:layout_constraintTop_toBottomOf="@+id/txtEcuatorianoAct" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.125" android:background="@drawable/button"/>
    <Button
            android:text="Actualizar"
            android:layout_width="131dp"
            android:layout_height="45dp"
            android:id="@+id/btnActualizar"
            app:layout_constraintStart_toEndOf="@+id/btnEliminar"
            android:layout_marginStart="8dp" android:layout_marginTop="104dp"
            app:layout_constraintTop_toBottomOf="@+id/txtEcuatorianoAct" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.663" android:background="@drawable/button"/>
    <Button
            android:text="Crear Libro"
            android:layout_width="131dp"
            android:layout_height="45dp"
            android:id="@+id/btnCrearLibro"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/btnEliminar"
            app:layout_constraintStart_toStartOf="@+id/btnEliminar"
            app:layout_constraintEnd_toEndOf="@+id/btnEliminar" app:layout_constraintHorizontal_bias="0.0"
            android:background="@drawable/button"/>
    <Button
            android:text="Gestionar Libros"
            android:layout_width="145dp"
            android:layout_height="49dp"
            android:id="@+id/btnGestionarLibros"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/btnActualizar"
            app:layout_constraintStart_toEndOf="@+id/btnCrearLibro"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.703" android:background="@drawable/button"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/numLibros"
            app:layout_constraintStart_toStartOf="@+id/txtFechaNacimientoAutor"
            app:layout_constraintEnd_toEndOf="@+id/txtFechaNacimientoAutor" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtFechaNacimientoAutor"/>
    <Button
            android:text="MenÃº"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMenuRetorno"
            app:layout_constraintEnd_toEndOf="@+id/btnGestionarLibros"
            android:layout_marginEnd="128dp"
            app:layout_constraintStart_toStartOf="@+id/btnCrearLibro"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="632dp" app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/button"/>
    <TextView
            android:text="ACTUALIZAR AUTOR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTituloActAutor" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="36dp"
            app:layout_constraintHorizontal_bias="0.505" android:textAlignment="center" android:textStyle="bold"
            android:textSize="28sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>