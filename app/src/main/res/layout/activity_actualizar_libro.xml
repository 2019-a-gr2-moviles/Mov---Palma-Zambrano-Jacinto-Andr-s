<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActualizarLibroActivity" android:background="@color/colorPrimaryDark">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtICBN" android:layout_marginTop="116dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="ICBN"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombreLibro" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtICBN"
            app:layout_constraintEnd_toEndOf="@+id/txtICBN" app:layout_constraintStart_toStartOf="@+id/txtICBN"
            android:hint="Nombre Libro"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtEditorial" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombreLibro"
            app:layout_constraintEnd_toEndOf="@+id/txtNombreLibro"
            app:layout_constraintStart_toStartOf="@+id/txtNombreLibro" android:hint="Editorial"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtnumEdicion"
            app:layout_constraintEnd_toEndOf="@+id/txtEditorial"
            app:layout_constraintStart_toStartOf="@+id/txtEditorial"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtEditorial"
            android:hint="Edicion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtfechaPublicacion"
            app:layout_constraintEnd_toEndOf="@+id/txtnumEdicion"
            app:layout_constraintStart_toStartOf="@+id/txtnumEdicion"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtnumEdicion"
            android:hint="Fecha Publicacion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtNumPaginas"
            app:layout_constraintEnd_toEndOf="@+id/txtfechaPublicacion"
            app:layout_constraintStart_toStartOf="@+id/txtfechaPublicacion"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtfechaPublicacion"
            android:hint="Numero Paginas"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtLongitud"
            app:layout_constraintEnd_toEndOf="@+id/txtLatitud"
            app:layout_constraintStart_toStartOf="@+id/txtLatitud" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/txtLatitud" android:hint="Longitud"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtLatitud"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNumPaginas"
            app:layout_constraintEnd_toEndOf="@+id/txtNumPaginas"
            app:layout_constraintStart_toStartOf="@+id/txtNumPaginas" android:hint="Latitud"/>
    <Button
            android:text="Actualizar Libro"
            android:layout_width="153dp"
            android:layout_height="45dp"
            android:id="@+id/btnActualizarLibro" app:layout_constraintStart_toStartOf="@+id/txtNumPaginas"
            app:layout_constraintEnd_toEndOf="@+id/txtNumPaginas" android:layout_marginTop="148dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNumPaginas" app:layout_constraintHorizontal_bias="0.516"
            android:background="@drawable/button"/>
    <Button
            android:text="Eliminar Libro"
            android:layout_width="155dp"
            android:layout_height="41dp"
            android:id="@+id/btnEliminarLibro" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnActualizarLibro"
            app:layout_constraintEnd_toEndOf="@+id/btnActualizarLibro"
            app:layout_constraintStart_toStartOf="@+id/btnActualizarLibro" android:background="@drawable/button"/>
    <TextView
            android:text="ACTUALIZAR LIBRO"
            android:layout_width="245dp"
            android:layout_height="73dp"
            android:id="@+id/txtTituloActualizarLibro"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.468" android:textAlignment="center" android:textSize="28sp"
            android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>