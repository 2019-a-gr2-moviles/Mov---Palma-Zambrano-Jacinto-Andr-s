<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActualizarLibroActivity" android:background="@color/colorPrimaryDark">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtICBNA" android:layout_marginTop="116dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="ICBN"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombreLibroA" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtICBNA"
            app:layout_constraintEnd_toEndOf="@+id/txtICBNA" app:layout_constraintStart_toStartOf="@+id/txtICBNA"
            android:hint="Nombre Libro"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtEditorialA" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombreLibroA"
            app:layout_constraintEnd_toEndOf="@+id/txtNombreLibroA"
            app:layout_constraintStart_toStartOf="@+id/txtNombreLibroA" android:hint="Editorial"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtnumEdicionA"
            app:layout_constraintEnd_toEndOf="@+id/txtEditorialA"
            app:layout_constraintStart_toStartOf="@+id/txtEditorialA"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtEditorialA"
            android:hint="Edicion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtfechaPublicacionA"
            app:layout_constraintEnd_toEndOf="@+id/txtnumEdicionA"
            app:layout_constraintStart_toStartOf="@+id/txtnumEdicionA"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtnumEdicionA"
            android:hint="Fecha Publicacion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtNumPaginasA"
            app:layout_constraintEnd_toEndOf="@+id/txtfechaPublicacionA"
            app:layout_constraintStart_toStartOf="@+id/txtfechaPublicacionA"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtfechaPublicacionA"
            android:hint="Numero Paginas"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/txtLongitudA"
            app:layout_constraintEnd_toEndOf="@+id/txtLatitudA"
            app:layout_constraintStart_toStartOf="@+id/txtLatitudA" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/txtLatitudA" android:hint="Longitud"
            android:layout_marginTop="16dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/txtLatitudA"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNumPaginasA"
            app:layout_constraintEnd_toEndOf="@+id/txtNumPaginasA"
            app:layout_constraintStart_toStartOf="@+id/txtNumPaginasA" android:hint="Latitud"/>
    <Button
            android:text="Actualizar Libro"
            android:layout_width="153dp"
            android:layout_height="45dp"
            android:id="@+id/btnActualizarLibro"
            android:background="@drawable/button"
            app:layout_constraintEnd_toEndOf="@+id/txtLongitudA"
            app:layout_constraintStart_toStartOf="@+id/txtLongitudA" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/txtLongitudA" app:layout_constraintHorizontal_bias="0.516"/>
    <Button
            android:text="Eliminar Libro"
            android:layout_width="155dp"
            android:layout_height="41dp"
            android:id="@+id/btnEliminarLibro" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnActualizarLibro"
            app:layout_constraintEnd_toEndOf="@+id/btnActualizarLibro"
            app:layout_constraintStart_toStartOf="@+id/btnActualizarLibro" android:background="@drawable/button"/>
    <TextView
            android:text="ACTUALIZAR LIBRO"
            android:layout_width="245dp"
            android:layout_height="73dp"
            android:id="@+id/txtTituloActualizarLibro"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.468" android:textAlignment="center" android:textSize="28sp"
            android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>