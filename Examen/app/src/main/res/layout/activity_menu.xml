<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuActivity" android:background="@color/colorPrimaryDark">

    <Button
            android:text="Autor"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/btnAutor" android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="121dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"
            android:background="@drawable/button" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="121dp"
            android:layout_below="@+id/btnCrearAutor"/>
    <Button
            android:text="Nuevo Autor"
            android:layout_width="153dp"
            android:layout_height="52dp"
            android:id="@+id/btnCrearAutor" android:layout_marginTop="153dp"
            app:layout_constraintTop_toBottomOf="@+id/btnAutor" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.193"
            android:layout_marginEnd="121dp" app:layout_constraintEnd_toEndOf="@+id/btnAutor"
            app:layout_constraintStart_toStartOf="@+id/btnAutor" app:layout_constraintHorizontal_bias="0.0"
            android:background="@drawable/button" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="121dp"
            android:layout_alignParentTop="true"/>
    <Button
            android:text="MAPA"
            android:layout_width="149dp"
            android:layout_height="wrap_content" android:id="@+id/btnMapaHijos" android:layout_marginTop="48dp"
            android:layout_below="@+id/btnAutor" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="123dp" android:layout_marginEnd="123dp"
            android:background="@drawable/button"/>
</RelativeLayout>