<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IngresarAutorActivity" android:background="@color/colorPrimaryDark">

    <EditText
            android:layout_width="309dp"
            android:layout_height="38dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtApellidosAutor" android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombreAutor"
            app:layout_constraintEnd_toEndOf="@+id/txtNombreAutor"
            app:layout_constraintStart_toStartOf="@+id/txtNombreAutor" android:layout_marginStart="3dp"
            android:hint="Apellidos" app:layout_constraintHorizontal_bias="1.0"
            android:layout_below="@+id/txtNombreAutor" android:layout_alignRight="@+id/txtNombreAutor"
            android:layout_marginRight="4dp" android:layout_marginEnd="4dp"
            android:layout_alignEnd="@+id/txtNombreAutor"/>
    <Button
            android:text="Aceptar"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAceptar"
            android:layout_marginTop="86dp"
            app:layout_constraintTop_toBottomOf="@+id/txtEcuatoriano" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="87dp" android:layout_marginStart="87dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.287" android:background="@drawable/button"
            android:layout_below="@+id/txtEcuatoriano" android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>
    <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancelar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="94dp" android:layout_marginRight="94dp" android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/txtEcuatoriano"
            app:layout_constraintStart_toEndOf="@+id/btnAceptar" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.145"
            android:background="@drawable/button" android:layout_below="@+id/txtEcuatoriano"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"/>
    <EditText
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombreAutor" android:layout_marginTop="139dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="44dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Nombres" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="44dp"
            android:layout_alignParentTop="true"/>
    <EditText
            android:layout_width="154dp"
            android:layout_height="38dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/numLibros"
            android:hint="Numero Libros"
            app:layout_constraintStart_toStartOf="@+id/txtFechaNacimientoAutor"
            android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/txtFechaNacimientoAutor"
            android:layout_below="@+id/txtFechaNacimientoAutor" android:layout_alignRight="@+id/txtFechaNacimientoAutor"
            android:layout_marginRight="154dp" android:layout_marginEnd="154dp"
            android:layout_alignEnd="@+id/txtFechaNacimientoAutor"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtEcuatoriano"
            app:layout_constraintStart_toStartOf="@+id/numLibros"
            app:layout_constraintEnd_toEndOf="@+id/numLibros"
            app:layout_constraintTop_toBottomOf="@+id/numLibros" android:hint="Ecuatoriano"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="23dp"
            android:layout_below="@+id/numLibros" android:layout_alignRight="@+id/numLibros"
            android:layout_marginRight="-59dp" android:layout_marginEnd="-59dp"
            android:layout_alignEnd="@+id/numLibros"/>
    <EditText
            android:layout_width="307dp"
            android:layout_height="40dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/txtFechaNacimientoAutor"
            app:layout_constraintStart_toStartOf="@+id/txtApellidosAutor"
            app:layout_constraintEnd_toEndOf="@+id/txtApellidosAutor"
            android:layout_marginTop="18dp" app:layout_constraintTop_toBottomOf="@+id/txtApellidosAutor"
            android:hint="Fecha Nacimiento (dd/mm/yyyy)" android:layout_below="@+id/txtApellidosAutor"
            android:layout_marginRight="0dp" android:layout_marginEnd="0dp"
            android:layout_alignRight="@+id/txtApellidosAutor" android:layout_alignEnd="@+id/txtApellidosAutor"/>
    <TextView
            android:text="AUTOR NUEVO"
            android:layout_width="256dp"
            android:layout_height="38dp" android:id="@+id/txtTituloNuevoAutor"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true" android:gravity="center"
            android:layout_marginRight="78dp" android:layout_marginEnd="78dp" android:layout_marginTop="60dp"
            android:layout_alignParentTop="true" android:textStyle="bold" android:textSize="36sp"/>
</RelativeLayout>