<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IngresarAutorActivity" android:background="@color/colorPrimaryDark">

    <EditText
            android:layout_width="309dp"
            android:layout_height="38dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtApellidosAutor" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombreAutor"
            app:layout_constraintEnd_toEndOf="@+id/txtNombreAutor"
            app:layout_constraintStart_toStartOf="@+id/txtNombreAutor" android:layout_marginStart="3dp"
            android:hint="Apellidos" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Aceptar"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAceptar"
            android:layout_marginTop="156dp"
            app:layout_constraintTop_toBottomOf="@+id/txtEcuatoriano" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.287" android:background="@drawable/button"/>
    <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancelar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="156dp"
            app:layout_constraintTop_toBottomOf="@+id/txtEcuatoriano"
            app:layout_constraintStart_toEndOf="@+id/btnAceptar" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.145"
            android:background="@drawable/button"/>
    <EditText
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombreAutor" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Nombres"/>
    <EditText
            android:layout_width="154dp"
            android:layout_height="38dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/numLibros"
            android:hint="Numero Libros"
            app:layout_constraintStart_toStartOf="@+id/txtFechaNacimientoAutor"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/txtFechaNacimientoAutor"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtEcuatoriano"
            app:layout_constraintStart_toStartOf="@+id/numLibros"
            app:layout_constraintEnd_toEndOf="@+id/numLibros"
            app:layout_constraintTop_toBottomOf="@+id/numLibros" android:hint="Ecuatoriano"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="4dp"/>
    <EditText
            android:layout_width="307dp"
            android:layout_height="40dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/txtFechaNacimientoAutor"
            app:layout_constraintStart_toStartOf="@+id/txtApellidosAutor"
            app:layout_constraintEnd_toEndOf="@+id/txtApellidosAutor"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtApellidosAutor"
            android:hint="Fecha Nacimiento (dd/mm/yyyy)"/>
</android.support.constraint.ConstraintLayout>