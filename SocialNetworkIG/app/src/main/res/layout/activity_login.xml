<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login"
        tools:context=".LoginActivity">

    <ImageView
            android:layout_width="154dp"
            android:layout_height="174dp" app:srcCompat="@drawable/logo" android:id="@+id/login_icon"
            android:layout_marginTop="10dp" android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" android:layout_marginEnd="129dp"
            android:layout_alignParentStart="true" android:layout_marginStart="127dp"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/login_email" android:layout_marginTop="44dp" android:layout_below="@+id/login_icon"
            android:hint="Email."
            android:background="@drawable/inputs" android:drawableLeft="@drawable/email" android:padding="10dp"
    />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/login_password"
            android:background="@drawable/inputs" android:padding="10dp" android:drawableLeft="@drawable/password"
            android:hint="Password" android:layout_marginTop="40dp" android:layout_below="@+id/login_email"/>

    <Button
            android:text="Login"
            android:layout_width="310dp"
            android:layout_height="wrap_content" android:id="@+id/login_button" android:layout_marginTop="35dp"
            android:background="@drawable/button" android:padding="15dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="50dp" android:layout_alignParentStart="true"
            android:layout_marginStart="51dp" android:textSize="20sp" android:textAlignment="center"
            android:textStyle="bold" android:textColor="@android:color/background_light"
            android:layout_below="@+id/login_password"/>
    <TextView
            android:text="Don't have an account?"
            android:layout_width="274dp"
            android:layout_height="28dp" android:id="@+id/register_account_link"
            android:layout_alignParentEnd="true" android:layout_marginEnd="49dp"
            android:layout_alignParentStart="true" android:layout_marginStart="87dp" android:textAlignment="center"
            android:textStyle="bold" android:textSize="20sp" android:textColor="@android:color/white"
            android:layout_marginTop="20dp" android:layout_below="@+id/login_button"
    />
    <TextView
            android:text="or Login with"
            android:layout_width="92dp"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:layout_alignParentEnd="true" android:layout_marginEnd="149dp"
            android:layout_alignParentStart="true" android:layout_marginStart="169dp"
            android:textColor="@android:color/background_light" android:layout_marginTop="19dp"
            android:layout_below="@+id/register_account_link"/>


    <ImageView
            android:layout_width="67dp"
            android:layout_height="60dp"
            android:src="@drawable/facebook"
            android:layout_alignParentBottom="true" android:layout_marginBottom="84dp"
            android:id="@+id/fb_signin_button"
            android:layout_marginTop="45dp" android:layout_below="@+id/textView2" android:layout_alignParentStart="true"
            android:layout_marginStart="85dp"/>


    <ImageView
            android:layout_width="65dp"
            android:layout_height="61dp"
            android:src="@drawable/google"
            android:layout_alignParentBottom="true" android:layout_marginBottom="83dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="94dp"
            android:id="@+id/google_signin_button" android:layout_marginTop="45dp"
            android:layout_below="@+id/textView2" android:layout_toEndOf="@+id/fb_signin_button"
            android:layout_marginStart="100dp"/>



</RelativeLayout>