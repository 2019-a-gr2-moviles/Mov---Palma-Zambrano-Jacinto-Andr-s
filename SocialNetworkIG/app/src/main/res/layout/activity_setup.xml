<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/register"
        tools:context=".SetupActivity">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/profile"

            android:layout_marginTop="56dp" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
            android:layout_marginEnd="107dp" android:layout_alignParentStart="true" android:layout_marginStart="104dp"
            android:id="@+id/setup_profile_image"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/setup_username"
            android:layout_marginStart="0dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="0dp" android:layout_alignParentStart="true"
            android:layout_marginTop="138dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/inputs" android:drawableLeft="@drawable/username" android:padding="16dp"
            android:layout_marginBottom="392dp" android:hint="Username"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/setup_full_name" android:layout_alignParentBottom="true" android:layout_marginBottom="329dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/inputs" android:drawableLeft="@drawable/name" android:padding="16dp"
            android:layout_marginEnd="0dp" android:hint="Full Name" android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/setup_country_name" android:layout_alignParentBottom="true" android:layout_marginBottom="264dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="1dp" android:layout_alignParentStart="true"
            android:background="@drawable/inputs" android:drawableLeft="@drawable/country" android:padding="16dp"
            android:layout_marginStart="-1dp" android:hint="Country"/>
    <Button
            android:text="Save"
            android:layout_width="297dp"
            android:layout_height="wrap_content" android:id="@+id/setup_information_button"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="53dp" android:layout_alignParentStart="true" android:layout_marginStart="60dp"
            android:background="@drawable/button"
            android:layout_alignParentBottom="true" android:layout_marginBottom="131dp" android:textSize="18sp"
            android:textColor="@android:color/background_light"/>


</RelativeLayout>