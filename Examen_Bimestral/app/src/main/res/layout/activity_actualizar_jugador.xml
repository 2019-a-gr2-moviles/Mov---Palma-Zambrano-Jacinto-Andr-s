<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActualizarJugadorActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtICBN" android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtApellidosAutor" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtICBN"
            app:layout_constraintEnd_toEndOf="@+id/txtICBN" app:layout_constraintStart_toStartOf="@+id/txtICBN"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombreJugador" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtApellidosAutor"
            app:layout_constraintEnd_toEndOf="@+id/txtApellidosAutor" app:layout_constraintStart_toStartOf="@+id/txtApellidosAutor"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtpoderEspecialDos"
            app:layout_constraintEnd_toEndOf="@+id/txtNombreJugador" app:layout_constraintStart_toStartOf="@+id/txtNombreJugador"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtNombreJugador"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtfechaIngresoEquipo"
            app:layout_constraintEnd_toEndOf="@+id/txtpoderEspecialDos" app:layout_constraintStart_toStartOf="@+id/txtpoderEspecialDos"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtpoderEspecialDos"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtGoles"
            app:layout_constraintEnd_toEndOf="@+id/txtfechaIngresoEquipo" app:layout_constraintStart_toStartOf="@+id/txtfechaIngresoEquipo"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtfechaIngresoEquipo"/>
    <Button
            android:text="Actualizar Jugador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnActualizarJugador" app:layout_constraintStart_toStartOf="@+id/txtGoles"
            app:layout_constraintEnd_toEndOf="@+id/txtGoles" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/txtGoles" app:layout_constraintHorizontal_bias="0.504"/>
    <Button
            android:text="Eliminar Jugador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEliminarJugador" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnActualizarJugador"
            app:layout_constraintEnd_toEndOf="@+id/btnActualizarJugador"
            app:layout_constraintStart_toStartOf="@+id/btnActualizarJugador"/>
</android.support.constraint.ConstraintLayout>