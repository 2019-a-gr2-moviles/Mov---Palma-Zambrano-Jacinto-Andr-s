<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IngresarActivity">

    <EditText
            android:layout_width="316dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtApellidosAutor" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombresAutor"
            app:layout_constraintEnd_toEndOf="@+id/txtNombresAutor"
            app:layout_constraintStart_toStartOf="@+id/txtNombresAutor" android:layout_marginStart="3dp"
            android:hint="Apellidos" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Aceptar"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAceptar"
            app:layout_constraintEnd_toEndOf="@+id/txtCampeonActual" android:layout_marginTop="92dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCampeonActual" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.537"/>
    <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancelar"
            app:layout_constraintStart_toEndOf="@+id/btnAceptar"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.203" android:layout_marginTop="92dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCampeonActual"/>
    <EditText
            android:layout_width="316dp"
            android:layout_height="44dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombresAutor" android:layout_marginTop="88dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Nombres"
            app:layout_constraintHorizontal_bias="0.24"/>
    <EditText
            android:layout_width="154dp"
            android:layout_height="47dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtNumLibrosAutor"
            android:hint="NÃºmero de Libros"
            app:layout_constraintStart_toStartOf="@+id/txtFechaNacimiento"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/txtFechaNacimiento"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtCampeonActual"
            app:layout_constraintStart_toStartOf="@+id/txtNumLibrosAutor"
            android:hint="Ecuatoriano"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/txtNumLibrosAutor"/>
    <EditText
            android:layout_width="313dp"
            android:layout_height="39dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/txtFechaNacimiento"
            app:layout_constraintStart_toStartOf="@+id/txtApellidosAutor"
            app:layout_constraintEnd_toEndOf="@+id/txtApellidosAutor"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtApellidosAutor"
            android:hint=" Fecha Nacimiento (dd/mm/yyyy)"/>
</android.support.constraint.ConstraintLayout>